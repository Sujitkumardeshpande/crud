<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Recipes</title>
  </head>
  <body>
    <h1>Recipes</h1>
    <form action="/add-recipe" method="POST">
      <label for="recipeName">Recipe Name:</label>
      <input
        type="text"
        id="recipeName"
        name="recipeName"
        required
      /><br /><br />
      <label for="recipeTime">Recipe Time:</label>

      <input
        type="text"
        id="recipeTime"
        name="recipeTime"
        required
      /><br /><br />
      <label for="ingredients">Ingredients:</label>
      <input
        type="text"
        id="ingredients"
        name="ingredients"
        required
      /><br /><br />
      <label for="serves">Serves:</label>
      <input type="text" id="serves" name="serves" required /><br /><br />
      <button type="submit">Add Recipe</button>
    </form>
    <br />
    <h2>Recipe List</h2>
    <ul>
      <% recipes.forEach(recipe => { %>
      <li>
        <%= recipe.recipeName %> - <%= recipe.recipeTime %> - <%= recipe.serves
        %>
        <form
          action="/delete-recipe/<%= recipe._id %>"
          method="POST"
          style="display: inline"
        >
          <input type="hidden" name="_method" value="DELETE" />
          <button type="submit">Delete</button>
        </form>
        <form
          action="/update-recipe/<%= recipe._id %>"
          method="POST"
          style="display: inline"
        >
          <input type="hidden" name="_method" value="PUT" />
          <label for="recipeTime">New Recipe Time:</label>
          <input type="text" id="recipeTime" name="recipeTime" required />
          <label for="serves">New Serves:</label>
          <input type="text" id="serves" name="serves" required />
          <button type="submit">Update</button>
        </form>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
